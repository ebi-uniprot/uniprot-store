{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "title" : "Field Item []",
  "type" : "array",
  "uniqueItems": true,
  "items" : {
    "$ref" : "#/definitions/SearchFieldItem"
  },
  "definitions" : {
    "SearchFieldItem" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "id" : {
          "type" : "string"
        },
        "parentId" : {
          "type" : "string"
        },
        "childNumber" : {
          "type" : "integer"
        },
        "seqNumber" : {
          "type" : "integer"
        },
        "itemType" : {
          "type" : "string",
          "enum" : [ "GROUP", "SINGLE", "SIBLING_GROUP" ]
        },
        "fieldType" : {
          "type" : "string",
          "enum" : [ "GENERAL", "RANGE", "EVIDENCE", "SORT" ]
        },
        "label" : {
          "type" : "string"
        },
        "tags" : {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "fieldName" : {
          "type" : "string"
        },
        "dataType" : {
          "type" : "string",
          "enum" : [ "STRING", "INTEGER", "ENUM", "DATE", "BOOLEAN" ]
        },
        "description" : {
          "type" : "string"
        },
        "example" : {
          "type" : "string"
        },
        "validRegex" : {
          "type" : "string"
        },
        "values" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/Value"
          }
        },
        "autoComplete" : {
          "type" : "string"
        },
        "autoCompleteQueryField" : {
          "type" : "string"
        },
        "autoCompleteQueryFieldValidRegex" : {
          "type" : "string"
        },
        "sortFieldId" : {
          "type" : "string"
        },
        "includeInSwagger" : {
          "type" : "boolean"
        }
      },
      "required" : ["id"],
      "dependencies": {
        "childNumber": ["id", "parentId", "itemType"],
        "fieldType": ["fieldName"],
        "autoComplete": ["autoCompleteQueryField"],
        "seqNumber": ["itemType", "label"],
        "autoCompleteQueryField": ["autoComplete"],
        "autoCompleteQueryFieldValidRegex": ["autoComplete"],
        "includeInSwagger": ["fieldName","fieldType", "dataType", "example", "description"]
      }
    },
    "Value" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "name" : {
          "type" : "string"
        },
        "value" : {
          "type" : "string"
        }
      }
    }
  }
}
